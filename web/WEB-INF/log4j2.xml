<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE xml>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!--<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>-->
            <PatternLayout pattern="[%t] ${date:yyyy-MM}-%d{HH:mm:ss.SSS}:%-5level-Classe:%logger{36} - %msg%n"/>
        </Console>
        <!--estrutura para inserir no ficheiro-->
        <File name="File" fileName="/home/jotajota/Desktop/PastaLogs/aplicaoLogs.log">
            <!--<PatternLayout pattern="${date:yyyy-MM} %d{HH:mm:ss.SSS}  %-2level %logger{36} - %msg%n"/>-->

        </File>
    </Appenders>
    <Loggers>
        <Root level="TRACE">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>